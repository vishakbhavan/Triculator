<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#72badd"
    tools:context=".Angle">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="CALCULATE ANGLE"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ALTITUDE LENGTH"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:id="@+id/edt_altitude_angle"
            android:inputType="number"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="BASE LENGTH"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="85dp"
            android:inputType="number"
            android:id="@+id/edt_base_angle"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="HYPOTENUSE LENGTH"/>
        <EditText
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:id="@+id/edt_hypotenuse_angle"
            android:layout_height="wrap_content" />

    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="25dp"

           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="Angle A"/>
           <EditText
               android:layout_width="match_parent"
               android:inputType="number"
               android:layout_marginLeft="130dp"
               android:id="@+id/res_angle_a"
               android:layout_height="wrap_content" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="25dp"

           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="Angle B"/>
           <EditText
               android:layout_width="match_parent"
               android:inputType="number"
               android:layout_marginLeft="130dp"
               android:id="@+id/res_angle_b"
               android:text="90"
               android:enabled="false"
               android:layout_height="wrap_content" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="25dp"

           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="Angle C"/>
           <EditText
               android:layout_width="match_parent"
               android:inputType="number"
               android:layout_marginLeft="130dp"
               android:id="@+id/res_angle_c"
               android:layout_height="wrap_content" />

       </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:id="@+id/btn_calc_angle"
            android:text="ANGLE "/>
        <Button
            android:layout_width="wrap_content"
            android:text="CLEAR"
            android:textStyle="bold"
            android:id="@+id/btn_clear_angle"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
   </LinearLayout>
    </ScrollView>
</LinearLayout>